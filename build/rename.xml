<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="Rename" default="rename">
  
  <target name="rename" depends="code, readme"
          description="Update the version references in code and readme"
   />
  
  <target name="code">
    <replace dir="..">
      <include name="**/pom.xml"/>
      <include name="**/GeoTools.java"/>
      <include name="**/common.py"/>
      <replacefilter token="8-ENTERPRISE-SNAPSHOT" value="8.8-ENTERPRISE"/>
    </replace>
  </target>
  
  <target name="readme">
    <replace file="../README.html">
      <replacefilter token="@RELEASE@" value="8.8-ENTERPRISE"/>
      <replacefilter token="@DATE@" value="set 26, 2013"/>
    </replace>
  </target>

</project>

